<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>XSS</title>
  <link href="/assets/css/hacker.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/images/hacker.png" />
  <script>
        if(!!navigator.userAgent.match(/Trident/g)
            || !!navigator.userAgent.match(/MSIE/g)
            || !!navigator.userAgent.match(/Edge/g))
            window.location = "https://www.google.com/chrome/";
  </script>
<script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
</head>
<body>
  <div class="container " style="max-width: 900px; margin-top: 30px">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <div class="text-center">
                <h1>Anotação {{titulo}}</h1>
              </dv>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="descricao">Descricao: </label>
              <div>
                {{{descricao}}}
              </div>
            </div>
          </div>
        </div>

        {{#if proprietario}}
        <div class="row">
          <div class="col-md-12 text-right">
            <a href="/nivel/3/anotacao/{{id}}/compartilhar" class="btn btn-primary text-right">Compartilhar</a>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="text-center"><h1>Compartilhado com</h1></div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <table class="table table-striped table-hover ">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Usuario</th>
                          <th>Lido</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each compartilhamentos}}
                          <tr>
                            <td>{{id}}</td>
                            <td>{{email}}</td>
                            <td>{{lido}}</td>
                          </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
          </div>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</body>
</html>
